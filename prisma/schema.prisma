generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Type {
  PUBLIC
  PRIVATE
}

enum PaymentStatus {
  ACTIVE
  CANCELLED
  PAST_DUE
  INCOMPLETE
  EXPIRED
}

enum WebhookStatus {
  PENDING
  PROCESSED
  FAILED
  SKIPPED
}

enum PlanType {
  FREE
  PLUS
  PRO_PLUS
}

model User {
  id               String          @id @default(uuid())
  stripeCustomerId String?
  name             String
  email            String          @unique
  passwordHash     String?
  designs          Designs[]
  maxDesigns       Int
  subscriptions    Subscriptions[]
  createdAt        DateTime        @default(now())
}

model Designs {
  id         String   @id @default(uuid())
  title      String
  prompt     String
  images     Images[]
  visibility Type     @default(PRIVATE)
  users      User[]
  createdAt  DateTime @default(now())
}

model Images {
  id           String   @id @default(uuid())
  publicId     String   @unique
  url          String
  secureUrl    String
  originalName String
  format       String
  width        Int
  height       Int
  size         Int
  Designs      Designs? @relation(fields: [designsId], references: [id], onDelete: Cascade)
  designsId    String?
}

model Subscriptions {
  id                   String        @id @default(uuid())
  user                 User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId               String
  stripeSubscriptionId String?       @unique
  stripePriceId        String?
  planType             PlanType
  status               PaymentStatus
  cancelAtPeriodEnd    Boolean?      @default(false)
  endedAt              DateTime?
  expiresAt            DateTime?
  lastPaymentAt        DateTime?
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt

  @@unique([userId, stripeSubscriptionId])
  @@index([userId])
  @@index([status])
  @@index([stripeSubscriptionId])
}

model WebhookEvents {
  id           String        @id @default(uuid())
  eventId      String        @unique
  eventType    String
  payload      Json
  status       WebhookStatus @default(PENDING)
  retryCount   Int           @default(0)
  receivedAt   DateTime      @default(now())
  processedAt  DateTime?
  errorMessage String?

  @@index([eventType])
  @@index([status])
}
